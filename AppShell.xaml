<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TreinoSport.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TreinoSport"
    xmlns:views="clr-namespace:TreinoSport.Views">

    <ShellContent Title="Home"
                  ContentTemplate="{DataTemplate local:MainPage}"
                  Route="MainPage" Shell.TabBarIsVisible="False"/>

    <TabBar>
        <ShellContent x:Name="_tabPaginaAluno" Route="PaginaInicialAluno" Title="Inicio" Icon="iconshome.png" ContentTemplate="{DataTemplate views:PaginaInicialAluno}"/>
        <ShellContent x:Name="_tabPaginaCT" Route="PaginaInicialCT" Title="Criar/editar" Icon="iconshome.png" ContentTemplate="{DataTemplate views:PaginaInicialCT}"/>
        <ShellContent x:Name="_tabGerenciamento" Route="GerenciamentoTreino" Title="Gerenciar" Icon="iconshome.png" ContentTemplate="{DataTemplate views:GerenciamentoTreino}"/>
        <ShellContent Route="Sair" Title="Sair" Icon="iconshome.png" ContentTemplate="{DataTemplate views:Sair}"/>
    </TabBar>
    


</Shell>
