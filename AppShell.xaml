<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TreinoSport.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TreinoSport"
    xmlns:views="clr-namespace:TreinoSport.XMLPages"
    Shell.FlyoutBehavior="Flyout">

    <Shell.FlyoutHeader>
        <Grid HeightRequest="200" BackgroundColor="White">
            <Image Source="treinosporticone.png"/>
        </Grid>
    </Shell.FlyoutHeader>

    <Shell.ToolbarItems>
        <ToolbarItem Text="Sair" Clicked="ClickSair"/>
    </Shell.ToolbarItems>

    <ShellContent Title="Home"
                  ContentTemplate="{DataTemplate local:MainPage}"
                  Route="MainPage" Shell.FlyoutBehavior="Disabled" FlyoutItemIsVisible="False"/>

    <FlyoutItem x:Name="PaginaInicialCT" Route="PaginaInicial" Title="Pagina inicial" Icon="iconshome.png">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate views:PaginaInicial}"/>
        </Tab>
    </FlyoutItem>

    <FlyoutItem x:Name="PaginaInicialAluno" Route="PaginaInicialAluno" Title="Pagina inicial" Icon="iconshome.png">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate views:PaginaInicialAluno}"/>
        </Tab>
    </FlyoutItem>

</Shell>
