<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TreinoSport"
             x:Class="TreinoSport.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <x:Double x:Key="TamFonteCadastro">18</x:Double>
            <x:Double x:Key="TamWidthEntry">270</x:Double>
            <x:Double x:Key="FonteAviso">14</x:Double>
            <Color x:Key="CorAviso">red</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>
